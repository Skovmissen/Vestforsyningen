@model Vestforsyningen.Models.Opgaver

@{
    ViewBag.Title = "Slet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Er du sikker på at du vil slette job: @Html.DisplayFor(model => model.jobnr) ?</h4>
<div>
    <hr />
    <table>
        <thead>
            <tr>
                <th>
                    @Html.Label("Adresse")
                </th>
                <th>
                    @Html.Label("Dato")
                </th>
                <th>
                    @Html.Label("Beskrivelse")
                </th>
                <th>
                    @Html.Label("Udføres")
                </th>
                <th>
                    @Html.Label("Job Nr")
                </th>
                <th>
                    @Html.Label("Kategori")
                </th>
                <th>
                    @Html.Label("Status")
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.addresse)
                </td>
                <td>
                    @Html.DisplayFor(model => model.dato)
                </td>
                <td>
                    @Html.DisplayFor(model => model.beskrivelse)
                </td>
                <td>
                    @Html.DisplayFor(model => model.udføres)
                </td>
                <td>
                    @Html.DisplayFor(model => model.jobnr)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Kategori.kategori1)
                </td>
                <td>
                    @Html.DisplayFor(model => model.status.status1)
                </td>
            </tr>
        </tbody>

    </table>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Slet" class="btn btn-default" /> |
            @Html.ActionLink("Tilbage", "Index")
        </div>
    }
</div>
